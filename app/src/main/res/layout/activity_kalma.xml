<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Kalma">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_alignParentStart="true">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/toolbar_layout">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_firstkalma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/teal_primary_dark"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_firstkalma"
                android:text="Kalma Tayyaba"
                android:textSize="17dp"
                android:drawablePadding="-50dp"
                android:background="@drawable/button_round"/>

            <Button
                android:id="@+id/btn_secondkalma"
                android:layout_width="0dp"
                android:textColor="@color/teal_primary_dark"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:drawableTop="@drawable/ic_secondkalma"
                android:text="Kalma Shahadat"
                android:textSize="17dp"
                android:background="@drawable/button_round"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="0dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:drawablePadding="-50dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_thirdkalma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:textColor="@color/teal_primary_dark"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:drawableTop="@drawable/ic_thirdkalma"
                android:text="Kalma Tamjeed"
                android:textSize="17dp"
                android:paddingTop="0dp"
                android:drawablePadding="-50dp"
                android:background="@drawable/button_round"
                />

            <Button
                android:id="@+id/btn_fourthkalma"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:drawableTop="@drawable/ic_fourthkalma"
                android:text="Kalma Touheed"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/teal_primary_dark"
                android:background="@drawable/button_round"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="0dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:drawablePadding="-50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_fifthkalma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/teal_primary_dark"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:drawableTop="@drawable/ic_fifthkalma"
                android:text="Kalma Astaghfar"
                android:textSize="17dp"
                android:paddingTop="0dp"
                android:drawablePadding="-50dp"
                android:background="@drawable/button_round"
                />

            <Button
                android:id="@+id/btn_sixthkalma"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:drawableTop="@drawable/ic_sixthkalma"
                android:text="Kalma Rad e Kufr"
                android:textStyle="bold"
                android:textSize="17dp"
                android:background="@drawable/button_round"
                android:paddingTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/teal_primary_dark"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:drawablePadding="-50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3">
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
